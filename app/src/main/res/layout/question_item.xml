<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/questionNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="start"
        tools:text="1)"
        android:textColor="@color/leading_color"
        android:layout_marginTop="@dimen/min_margin_top"
        android:layout_marginStart="@dimen/min_margin_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="start"
        android:textColor="@color/leading_color"
        tools:text="האם אתה מרגיש טוב יותר?"
        android:textDirection="rtl"
        android:layout_marginStart="@dimen/min_margin_start"
        app:layout_constraintStart_toEndOf="@id/questionNumber"
        app:layout_constraintTop_toTopOf="@id/questionNumber"
        app:layout_constraintBottom_toBottomOf="@id/questionNumber"
        />


</androidx.constraintlayout.widget.ConstraintLayout>