<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/round_rect_shape">

    <com.mark.sharee.widgets.ShareeTextView
        android:id="@+id/pollName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="start"
        tools:text="האם אתה מרגיש טוב יותר?"
        app:sharee_font="orionRegular"
        android:textColor="@color/white"
        android:textDirection="rtl"
        android:paddingStart="@dimen/min_margin_start"
        android:paddingEnd="@dimen/min_margin_end"
        android:layout_marginEnd="@dimen/min_margin_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>